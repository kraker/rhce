# EditorConfig configuration for RHCE study repository
# Ensures consistent coding styles across different editors

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files (Ansible playbooks, configs, GitHub Actions)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown files (documentation)
[*.md]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks

# Python files (if any)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab
indent_size = 4

# CSV files (Anki deck)
[*.csv]
trim_trailing_whitespace = false

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Ruby files (Vagrantfile and scripts)
[*.rb]
indent_style = space
indent_size = 2
max_line_length = 120

# Vagrantfile (Ruby without .rb extension)
[Vagrantfile]
indent_style = space
indent_size = 2
max_line_length = 120