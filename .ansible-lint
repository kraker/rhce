# Ansible-lint configuration for RHCE study repository
# Tailored for educational playbooks and practice scenarios

# Directories and files to exclude from linting
exclude_paths:
  - .cache/          # Implicit cache directory
  - site/            # MkDocs build output
  - sources/         # External copyrighted materials
  - .github/         # GitHub workflows
  - vagrant/collections/  # Project-local collections
  - vagrant/roles/        # Project-local roles

# Skip rules that may be too strict for educational content
skip_list:
  - yaml[line-length]           # Allow longer lines for readability
  - name[template]              # Allow template expressions in task names
  - var-naming[no-role-prefix]  # Allow variables without role prefixes
  - run-once[task]              # Allow run_once for lab setup tasks

# Warn instead of fail for certain rules (educational purposes)
warn_list:
  - command-instead-of-module  # Warn about shell/command usage
  - experimental               # Allow experimental features

# Enable additional checks
enable_list:
  - fqcn-builtins    # Require FQCN for builtin actions
  - no-changed-when  # Tasks should indicate when they change things

# Use default rules with FQCN enforcement
use_default_rules: true
offline: false
